<UserControl
    x:Class="NgsPacker.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewmodels="clr-namespace:NgsPacker.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsPageViewModel}"
    d:DesignHeight="384"
    d:DesignWidth="512"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="NgsPacker"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel>
                <TextBlock Text="{lex:Loc ToggleThemeText}" />
                <ui:ToggleSwitch
                    Margin="10,0,0,5"
                    IsOn="{Binding ToggleDarkTheme}"
                    ToolTip="{lex:Loc ToggleDarkThemeTooltip}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="{lex:Loc LanguageText}" />
                <ComboBox
                    Margin="10,0,0,5"
                    DisplayMemberPath="DisplayName"
                    ItemsSource="{Binding Path=SupportedLanguages, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Path=SelectedLanguage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="{lex:Loc NotifyCompleteText}" />
                <ui:ToggleSwitch
                    Margin="10,0,0,5"
                    IsOn="{Binding ToggleNotifyComplete}"
                    ToolTip="{lex:Loc NotifyCompleteTooltip}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{lex:Loc WhiteListText}" />
            <TextBox
                MaxHeight="300"
                Margin="10,0,5,5"
                AcceptsReturn="True"
                AutomationProperties.Name="multi-line TextBox"
                Text="{Binding WhiteList}" />
        </StackPanel>
        <Button
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Right"
            Command="{Binding SaveCommand}"
            Content="{lex:Loc SaveText}"
            Style="{StaticResource ButtonRevealStyle}" />
    </Grid>
</UserControl>
